# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[{*.yaml,*.yml,*.json}]
indent_size = 2

[{*.md}]
indent_size = 2
max_line_length = off

[{Makefile,Makefile.*}]
indent_style = tab

[{justfile}]
indent_style = space
